<div class="add-new-post__main d-flex">
    <div class="col-lg-9 col-md-12 w-75">
        <!-- Add New Post Form -->
        <div class="card card-small mb-3">
            <div class="card-body">
                <!-- <form class="add-new-post"> -->
                <input class="form-control form-control-lg mb-3" id="title" type="text" placeholder="Your Post Title">
                <div class="comsume_content">
                    <textarea id="sumarry" class="form-control form-control-lg mb-3" rows="3" cols="106"
                        placeholder="Summary of your article here"></textarea>
                </div>
                <div class="post_editor_content">
                    <textarea id="editor" name="editor" rows="3" cols=106></textarea>
                </div>
                <!-- </form> -->
            </div>
        </div>

    </div>
    <div class="col-lg-3 col-md-12 m-0 w-25">
        <div class='card card-small mb-3'>
            <div class="card-header border-bottom">
                <h6 class="m-0">Tags</h6>
            </div>
            <div class='card-body p-0'>
                <ul class="list-group list-group-flush">

                    <li class="list-group-item d-flex px-3">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Add tag">
                            <div class="input-group-append">
                                <button class="btn btn-white px-2" type="button">
                                    <i class="material-icons">add</i>
                                </button>
                            </div>
                        </div>
                    </li>

                </ul>
            </div>
        </div>

        <div class='card card-small mb-3'>
            <div class="card-header border-bottom">
                <h6 class="m-0">Categories</h6>
            </div>
            <div class='card-body p-0'>
                <div class="px-4 mt-3">
                    <% categoryList.forEach(function(eachCategory){ %>
                        <label class="container_input" id="<%= eachCategory._id %>"><%= eachCategory.title %>
                            <input type="checkbox" name="radio">
                            <span class="custom-checkbox"></span>
                        </label>

                        <% if(eachCategory.subCategories.length !== 0){ %>
                            <div class="ml-4">
                                <% eachCategory.subCategories.forEach(function(eachSubCategory){ %>
                                <label class="container_input" parentId="<%= eachCategory._id %>"><%= eachSubCategory.title %>
                                    <input type="radio" name="radio">
                                    <span class="custom-radio"></span>
                                </label>
                                <% }) %>
                            </div>
                        <% } %>

                        <div class="w-100 border mb-3"></div>
                    <% }) %>
                </div>


                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex px-3">
                        <button class="btn btn-sm btn-outline-accent">
                            <i class="material-icons">save</i>Save Draft
                        </button>
                        <button type="submit" id="btn_publish" class="btn btn-sm btn-accent ml-auto">
                            <i class="material-icons">file_copy</i>Publish
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>