<div class="container-sign row m-0">
    <div class="col-xl-4 col-lg-3 col-md-2 col-sm-1 col-0 p-0 m-0 blank-col-nav">
    </div>
    <div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 p-0 m-0 pt-2 pr-2 pl-2 p-lg-0">
        <div class="title-page-sign">
            <p class="text-uppercase text-center">the big wind</p>
        </div>
        <form class="emailForgotPwd" id="emailForgotPwd">
            <div class="content p-3">
                <div class="title font-weight-bold">Find Your Account</div>
                <div class="warning pt-2">Please enter your email address to search for your account.</div>
                <div class="reset_pwd pt-3">
                    <input type="text" class="form-control" id="emailForgotPwd__input" placeholder="Email address"
                        name="code_Check">
                </div>
            </div>
            <div class="control pl-3 pr-3 pb-2 row m-0 justify-content-end">
                <div class="btns-done-reset row m-0 justify-content-end align-items-center">
                    <div class="pr-2">
                        <a href="/auth">
                            <button type="button" class="btn btn-cancel"
                                id="emailForgotPwd__btnCancel">Cancel</button></a>
                    </div>
                    <div class="pl-2">
                        <button type="submit" class="btn btn-success" id="emailForgotPwd__btn">Continue</button>
                    </div>
                </div>
            </div>
        </form>
        <form class="forgotPwd" id="forgotPwd">
            <div class="content p-3">
                <div class="title font-weight-bold">Enter Security Code</div>
                <div class="warning pt-2">Please check your email for a text message with your code. Your code is
                    6 characters in length.</div>
                <span class="notice row m-0"><strong>We send your code to: </strong>&nbsp;<p class="email m-0"
                        id="emailForgotPwd__text"></p></span>
                <div class="reset_pwd pt-3">
                    <input type="text" class="form-control" id="forgotPwd__code" placeholder="Enter code"
                        name="code_Check">
                </div>
            </div>
            <div class="control pl-3 pr-3 pb-2 row m-0 justify-content-between">
                <div class="error_noCode d-flex align-items-center">
                    <a href="">Didn't get a code</a>
                </div>
                <div class="btns-done-reset row m-0 justify-content-end align-items-center">
                    <div class="pr-2">
                        <a href="/auth">
                            <button type="button" class="btn btn-cancel" id="forgotPwd__btnCancel">Cancel</button></a>
                    </div>
                    <div class="pl-2">
                        <button type="submit" class="btn btn-success" id="forgotPwd__btn">Continue</button>
                    </div>
                </div>
            </div>
        </form>

        <div role="tabpanel" class="tab-pane fade" id="change_password" aria-labelledby="hats-tab">
            <div class="title-tab">
                <p class="m-0">Change Password</p>
            </div>
            <br>
            <form class="p-4">
                <div class="form-group">
                    <label for='#update__pwdOld' class="m-0 pb-1">Password</label>
                    <input type="password" class="form-control" id="updatePwd__pwdOld" placeholder="Old password">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="updatePwd__pwdNew" placeholder="New password">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="updatePwd__pwdNewRe"
                        placeholder="Retype new password">
                </div>
                <div class="row m-0 btns-done-edit justify-content-end align-items-center">
                    <div class="pr-2">
                        <button type="button" class="btn btn-cancel" id="updatePwd__btnCancel">CANCEL</button>
                    </div>
                    <div class="pl-2">
                        <button type="submit" class="btn btn-success" id="updatePwd__btn">SAVE PASSWORD</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-xl-4 col-lg-3 col-md-2 col-sm-1 col-0 p-0 m-0 blank-col-nav">
    </div>
</div>