<div class="col">
    <div class="card card-small mb-4">
        <div class="card-header border-bottom pb-0">
            <div class="row pb-3 border-bottom">
                <div class="img-avatar d-flex m-auto">
                    <img src="/images/icons/logo.png" alt="" width="110" height="110">
                    <label class="btn btn-change-avatar" for="pic-avatar"><i class="fa fa-camera"></i></label>
                    <input type="file" id="pic-avatar" name="pic" accept="image/*">
                </div>
            </div>

            <div class="card-body my-2">
                <form class="w-75 m-auto">
                    <div class="form-group">
                        <label for="fullname">Fullname</label>
                        <input type="text" class="form-control" id="fullname" placeholder="Enter your fullname"
                            value="Dang Vinh Phat">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" id="email" placeholder="Enter your email"
                            value="1612486@student.hcmus.edu.vn">
                    </div>

                    <div class="form-group">
                        <label for="birthday">Birthday</label>

                        <div class="d-flex">
                            <input id="js-birthday-input" type="text" class="input-sm form-control" name="birthday"
                                placeholder="Enter your birthday">
                            <span class="input-group-append">
                                <span class="input-group-text">
                                    <i class="far fa-calendar-alt"></i> </span>
                            </span>
                        </div>
                    </div>

                    <div class="border">
                        <div class="d-flex ml-2 p-2">
                            <i class="fas fa-key my-auto"></i>
                            <span class="my-auto ml-3">Change password</span>
                            <button id="js-button-change-password" class="btn btn-white ml-auto" type="button">
                                <i class="far fa-edit"></i>
                            </button>
                        </div>

                        <div id="js-form-change-password" style="display: none;">
                            <div class="border-bottom mt-2"></div>
                            <div class="form-group w-75 mx-auto my-4">
                                <div class="form-group d-flex">
                                    <label class="w-25" for="currentPassword">Current</label>
                                    <input type="password" class="input-sm form-control" name="currentPassword">
                                </div>

                                <div class="form-group d-flex">
                                    <label class="w-25" for="newPassword">New</label>
                                    <input type="password" class="input-sm form-control" name="newPassword">

                                </div>

                                <div class="form-group d-flex m-0">
                                    <label class="w-25" for="retypePassword">Retype new</label>
                                    <input type="password" class="input-sm form-control" name="retypePassword">
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-accent mt-3">Update Account</button>
                </form>
            </div>
        </div>
    </div>
</div>