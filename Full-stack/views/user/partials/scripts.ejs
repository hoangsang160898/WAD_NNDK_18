<% if(account){ %>
    <% if(account.expiredAd > Date.now()){ %>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.4.1/jspdf.min.js'></script>
    <% } else { %>
        <script src="/javascripts/guest-subscriber/information.js" type="text/javascript"></script>
        <script>
            $(document).ready(function () {
                $("#updateInf__bod").datepicker({});
            });

           
        
            $('#bod_acccount').html(formatDateTypeBOD($('#bod_acccount').html()));
         
            $('#expiry-date').html(formatDateTypeBOD($('#expiry-date').html()));
        
            document.getElementById('updateInf__bod').value = formatDateTypeBOD(document.getElementById('updateInf__bod').value);
            var oldFname = document.getElementById('updateInf__fullname').value;
            var oldGend = document.getElementById('updateInf__gender').value;
            var oldBod = document.getElementById('updateInf__bod').value;
            $('#updateInf__btnCancel').click(function (e) {
                document.getElementById('updateInf__fullname').value = oldFname;
                document.getElementById('updateInf__gender').value = oldGend;
                document.getElementById('updateInf__bod').value = oldBod;
                document.getElementById('updateInf__email').value = document.getElementById('updateInf__email').value;
                clearEditProfileErrors();
            });
        
        </script>
    <% } %>
